<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settings_activity_layout"
    android:background="@drawable/wood_texture"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/settings_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_first_row_margin_top"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/settings_theme_choice"
            android:background="@color/cornflower_blue"
            android:textColor="@color/floral_white"
            android:textSize="@dimen/settings_theme_choice_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/button_second_row_margin_top"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="@dimen/switcher_textview_margin_start"
            android:background="@color/cornflower_blue"
            android:gravity="center"
            android:text="@string/button_theme_light"
            android:textColor="@color/floral_white"
            android:textSize="@dimen/settings_theme_switch_text_size"
            tools:ignore="NestedWeights" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/settings_switch"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_weight="3"
            android:paddingEnd="@dimen/switcher_padding_end"
            android:background="@color/light_green"
            android:textSize="@dimen/settings_theme_switch_text_size"
            tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginEnd="@dimen/switcher_textview_margin_end"
            android:background="@color/purple"
            android:gravity="center"
            android:text="@string/button_theme_dark"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_theme_switch_text_size" />
    </LinearLayout>
</LinearLayout>